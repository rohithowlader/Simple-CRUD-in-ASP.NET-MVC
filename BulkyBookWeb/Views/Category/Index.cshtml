@model IEnumerable<Category>
    @{
    ViewData["Title"] = "Index";
    }

    @if(TempData["success"] !=null)
    {
        <h2>@TempData["success"]</h2>
    }

    <div class="container p-3">
        <div class="row pt-4"> 
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i>&nbsp Create New Category
                </a>
            </div>
        </div>
        <br />
     </div>


    <h1>Index Category</h1>

    <table class="table table-bordered table-striped table-responsive" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Category Order</th>
                <th></th> 
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
             {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group text-center" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pen"></i>&nbsp Edit</a>
                        </div>
                    </td><td>
                        <div class="w-75 btn-group text-right" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger" ><i class="bi bi-trash3-fill"></i>&nbsp Delete</a>
                        </div>
                    </td>
                </tr>
                }
        </tbody>
    </table>
