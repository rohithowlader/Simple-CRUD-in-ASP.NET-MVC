@model Category

<br />
<div class="border p-3 mt-4" >
<h2 class="text-primary">Delete Category</h2>



@*<div asp-validation-summary="All"></div>*@
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
  <div class="form-group mb-3">
    <label asp-for="Name">Item Name</label>
    <input type="text" class="form-control" disabled asp-for="Name"  placeholder="Enter Name">
    <span asp-validation-for="Name"  class="text-danger"></span>
  </div>
  <div class="form-group mb-3">
    <label asp-for="DisplayOrder">DisplayOrder</label>
    <input type="number" class="form-control" disabled asp-for="DisplayOrder" placeholder="Enter Display Order">
    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-danger" >Delete</button>
  <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
